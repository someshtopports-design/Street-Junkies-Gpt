rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper to check role from 'users' collection
    function hasRole(role) {
      // Note: This requires a 'users' collection where document ID is the User UID
      // and has a field 'role' string.
      // e.g. users/{uid} -> { role: 'admin' }
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return request.auth != null && userDoc != null && userDoc.data.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isManager() {
      return hasRole('manager');
    }

    function isSales() {
      return hasRole('sales');
    }

    // =========================================================
    // Collection Rules
    // =========================================================

    // Users Collection
    // Users can read their own profile. Admins can read all.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    // Brands Collection
    // Read: All authenticated users (Sales need to see brands)
    // Write: Admin/Manager only
    match /brands/{brandId} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || isManager();
    }

    // Inventory Collection
    // Read: All authenticated users
    // Create/Delete: Admin/Manager only
    // Update: Admin/Manager OR Sales (Sales need to update stock count)
    match /inventory/{itemId} {
      allow read: if request.auth != null;
      allow create, delete: if isAdmin() || isManager();
      allow update: if isAdmin() || isManager() || isSales();
    }

    // Sales Collection
    // Read: Admin/Manager (Sales might need to read strictly their own? For now Admin/Manager for invoices view)
    // Create: Any authenticated user (Salespeople)
    // Update/Delete: Admin/Manager only
    match /sales/{saleId} {
      allow read: if isAdmin() || isManager();
      allow create: if request.auth != null;
      allow update, delete: if isAdmin() || isManager();
    }
  }
}
